{
    "version": 2,
    "regions": ["hnd1"],
    "builds": [
        {
            "src": "/api/index.php",
            "use": "vercel-php@0.6.0"
        },
        {
            "src": "/public/**",
            "use": "vercel-php@0.6.0"
        }
    ],
    "routes": [
        {
            "src": "/build/assets/(.*)",
            "dest": "/public/build/assets/$1"
        },
        {
            "src": "/favicon.ico",
            "dest": "/public/favicon.ico"
        },
        {
            "src": "/robots.txt",
            "dest": "/public/robots.txt"
        },
        {
            "src":"/sw.js",
            "dest":"/public/sw.js"
        },
        {
            "src":"/",
            "dest":"/public/index.php"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ]
}
